        <Button x:Name="closeCamera" Content="closeCamera_Click" Click="cleanup_Click" HorizontalAlignment="Left" Height="58" Margin="698,629,0,0" VerticalAlignment="Top" Width="153" Background="#33FFFFFF"/>
        <Button x:Name="takePhoto" Content="takePhoto_Click" Click="takePhoto_Click" HorizontalAlignment="Left" Height="58" Margin="698,553,0,0" VerticalAlignment="Top" Width="153" Background="#33FFFFFF"/>
        <TextBox x:Name="statusBox2" HorizontalAlignment="Left" Height="134" Margin="22,453,0,0" TextWrapping="Wrap" Text="status 2" VerticalAlignment="Top" Width="626"/>
